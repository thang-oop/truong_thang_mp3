<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewBackgroundBanner"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="200dp">
    </ImageView>

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </View>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_alignBottom="@+id/imageViewBackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewBanner"
            android:padding="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp">
        </ImageView>

        <TextView
            android:id="@+id/textViewTitleBannerSong"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Truong Van Thang"
            android:textSize="17sp"
            android:layout_toEndOf="@id/imageViewBanner"
            android:layout_alignTop="@id/imageViewBanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageViewBanner"
            android:layout_below="@+id/textViewTitleBannerSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:maxLines="2"
                android:text="Những ca khúc hot nhất trên thị trường hiện nay"
                android:textColor="#fffdfc"
                android:textSize="13sp">
            </TextView>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>