<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="1"
            android:textSize="20dp">
        </TextView>

        <TextView
            android:id="@+id/textViewNameSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textViewIndex"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="I Love You"
            android:textColor="#0E0E0D"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/textViewNameSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNameSong"
            android:layout_toRightOf="@id/textViewIndex"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Truong Van Thang"
            android:textColor="#979797"
            android:textSize="20sp">
        </TextView>

        <ImageView
            android:id="@+id/imageViewLikeSong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/iconlove"></ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>